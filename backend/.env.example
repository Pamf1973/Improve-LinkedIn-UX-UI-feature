# Environment (development or production)
ENVIRONMENT=development

# LinkedIn OAuth 2.0 (OpenID Connect)
# Get these from https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here

# Must match the redirect URI registered in your LinkedIn app
# For production, use your deployed backend URL
LINKEDIN_REDIRECT_URI=http://localhost:8001/api/auth/linkedin/callback

# Where to redirect after successful auth
# For production, use your deployed frontend URL
FRONTEND_URL=http://localhost:5173

# Allowed CORS origins (comma-separated for multiple origins)
# For production, add your deployed frontend URLs
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
